<!DOCTYPE html>
<html>
  <head>
    <title>Docoffice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p>
      <%= logged_in? ? "hello, #{current_user.name}!" : 'PLEASE LOG IN' %>
    <p>
    <h1>
      <%= link_to "DocApp ðŸ¥", doctors_path %>
    </h1>
    <nav>
      <%= link_to "new doctor", new_doctor_path %>
      <%= link_to "new patient", new_patient_path %>
      <%= link_to "visits", visits_path %>

      <% if logged_in? %>
        <%= link_to "Logout", sessions_path, method: :delete %>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>


    </nav>
    <div>
      <% flash[:errors].each do |error| %>
        <h4 style="color: red;">
          <%= error %>
        </h4>
      <% end %>
    </div>
    <hr>
    <%= yield %>
  </body>
</html>
